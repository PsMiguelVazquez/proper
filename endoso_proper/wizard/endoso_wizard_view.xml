<?xml version="1.0"?>
<odoo>
    <record id="view_endoso_wizard_form" model="ir.ui.view">
        <field name="name">endoso.wizard.form</field>
        <field name="model">endoso.wizard</field>
        <field name="arch" type="xml">
            <form string="Endosar factura">
                <label for="factura"/>
                <field name="factura" string="Factura"/>
                <label for="cliente"/>
                <field name="cliente" string="Cliente"/>
                <label for="amount"/>
                <field name="amount" widget="monetary"/>
                <footer>
                    <button name="done_endoso" type="object" string="Confirmar"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



</odoo>