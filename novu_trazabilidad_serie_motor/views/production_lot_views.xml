<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_move_form_engine" model="ir.ui.view">
        <field name="name">stock.production.lot.inherit.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="use_engine_number" invisible="1"/>
                <field name="engine_number" attrs="{'invisible': [('use_engine_number', '=', False)]}" />
            </xpath>
        </field>
    </record>
    
</odoo>
