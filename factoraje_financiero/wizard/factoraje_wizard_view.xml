<?xml version="1.0"?>
<odoo>
    <record id="view_factoraje_wizard" model="ir.ui.view">
        <field name="name">factoraje.wizard.form</field>
        <field name="model">factoraje.financiero.wizard</field>
        <field name="arch" type="xml">
            <form string="Factoraje">
                <field name="partner_id" invisible="1"/>
                <group>
                    <group name="Left group">
                        <field name="payment_date" widget="date" string="Fecha del pago"/>
                        <field name="journal" string="Diario" domain="[('type','in',('bank','cash'))]"/>
                        <field name="financial_factor" string="Factorante"/>
                        <field name="provider_bill" string="Factura del proveedor" domain="[('partner_id', '=', partner_id), ('move_type', '=', 'in_invoice'), ('state', '=', 'posted'),('payment_state', 'in', ('not_paid', 'partial'))]"/>
                        <field name="amount_provider_bill" string="Monto restante de la factura" widget="monetary"/>
                        <field name="payment_method" string="MÃ©todo de pago"/>
                    </group>
                    <group name="Right group">
                        <field name="currency" widget="Moneda"/>
                        <field name="memo" widget="Memo"/>
                        <field name="bank_total" widget="monetary"/>
                        <field name="factoring_total" widget="monetary"/>
                        <field name="amount_total" widget="monetary"/>
                    </group>
                </group>
                <field name="partner_bills" widget="many2many" mode="tree">
                    <tree string="Facturas de cliente" editable="bottom">
                            <field name="partner_id" optional="hide" readonly="1"/>
                            <field name="name" readonly="1"/>
                            <field name="amount_total_signed" string="Importe Total" readonly="1"/>
                            <field name="amount_residual" string="Importe adeudado" readonly="1"/>
                            <field name="factoring_amount"/>
                            <field name="porcent_assign"/>
                    </tree>
                </field>
                <field name="line_ids"/>
                <footer>
                    <button name="done_factoring" type="object" string="Confirmar"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>