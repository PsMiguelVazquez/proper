<?xml version="1.0"?>
<odoo>
    <record id="view_wizard_serie_motor_form" model="ir.ui.view">
        <field name="name">wizard.serie.motor.form</field>
        <field name="model">wizard.serie.motor</field>  
        <field name="arch" type="xml">
            <form string="Ingrese los nÃºmeros de serie y motor">
                <group>
                    <group>
                        <field name="invoice_id" invisible="1"/>
                        <field name="line_ids" widget="many2many">
                            <tree create="false" delete="false" editable="bottom">
                                <field name="product_id" readonly="1"/>
                                <field name="serial_number"/>
                                <field name="engine_number"/>
                            </tree>
                        </field>
                    </group>
                </group>
                <footer>
                    <button name="confirm_serial_numbers" string="Confirmar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>